{
  "build": { 
    "dockerfile": "Dockerfile",
    "args": {
        "CLAB_VERSION": "${localEnv:CLAB_VERSION}",
        "NETBOX_URL_ARG": "${localEnv:NETBOX_URL}",
        "NETBOX_TOKEN": "${localEnv:NETBOX_TOKEN}",
        "PRIV_KEY_NAME": "ssh_key"
    }
  },
  "hostRequirements": {
      "cpus": 4,
      "memory": "16gb",
      "storage": "32gb"
  },
  "containerEnv": {
      "CLAB_VERSION": "${localEnv:CLAB_VERSION}",
      "PRIV_KEY_NAME": "ssh_key"
  },
  "features": {
      "ghcr.io/devcontainers/features/github-cli:1": {},
      "ghcr.io/devcontainers/features/docker-in-docker:2": {},
      "ghcr.io/devcontainers/features/terraform:1": {}
  },
  "customizations": {
      "codespaces": {
        "openFiles": [
          "../index.md"
        ]
      },
      "vscode": {
          "extensions": [
                // git essentials
                "piotrpalarz.vscode-gitignore-generator",
                "mhutchie.git-graph",
                "donjayamanne.githistory",
                // spell checker
                "streetsidesoftware.code-spell-checker",
                // drawio and tldraw
                // excalidraw is pre-installed in universal
                "hediet.vscode-drawio",
                "tldraw-org.tldraw-vscode",
                // markdown
                "yzhang.markdown-all-in-one",
                "bierner.markdown-checkbox",
                "DavidAnson.vscode-markdownlint",
                // various tools
                "tuxtina.json2yaml",
                "mutantdino.resourcemonitor",
                "fabiospampinato.vscode-terminals",
                //"marp-team.marp-vscode",
                // Terraform
                "hashicorp.terraform",
                //Containerlab
                "srl-labs.vscode-containerlab",
                "marp-team.marp-vscode"
            ]
      }
  },
  "forwardPorts": [2222],
  "portsAttributes": {
    "2222": {
      "label": "FastAPI",
      "protocol": "https"
    }
  },
  "postCreateCommand": "postCreate.sh",
  "postStartCommand": ["sudo -E containerlab deploy -t ../lab1.clab.yaml"]
}
